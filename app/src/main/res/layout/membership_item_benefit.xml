<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/gray_outline_button"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/nameTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Skotersverige"
                   android:textColor="@color/dark_blue"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="@dimen/_22sdp"
                       android:layout_height="@dimen/_22sdp"
                      android:layout_alignParentEnd="true"
                       android:textColor="@color/dark_blue"
                       android:src="@drawable/mup" />
               </RelativeLayout>


           </LinearLayout>




        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvBenefitDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefit Description"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"
        android:textAlignment="textStart"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="@android:color/darker_gray" />


    <!-- You can add other elements like an ImageView for partner logo if needed -->
</LinearLayout>
