<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/idFeedBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:background="@drawable/feedback_banner"/>

        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="6dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_white_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_btn" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/topIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/callFeedBackLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_white_background"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/backBtn">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FeedBack"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idFeedBack"
        android:layout_gravity="center"
        android:layout_margin="14dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/card_bg_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="11dp">

            <LinearLayout
                android:id="@+id/idCallFeedBack"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_white_background"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/trade_in_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to add a feedback."
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                android:textStyle="bold" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_report_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idFeedBack"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:text=""
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_report_problem"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:layout_marginStart="@dimen/_6sdp"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_report_problem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/rounded_edit_text_background"
            android:gravity="center|top"
            android:hint="Write here"
            android:padding="@dimen/_6sdp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal"
            app:ignore="RtlCompat" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/choose_location_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/blue_bg_color"
            android:elevation="0dp"
            android:paddingLeft="24dp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingRight="24dp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/report_problem_choose_location_btn"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</RelativeLayout>
