<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_bg" />


    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="150dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home_logo" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_1"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/t_2"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>




    <!--    <Button-->
    <!--        android:id="@+id/signUpButton"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@id/logo"-->
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:layout_marginTop="100dp"-->
    <!--        android:background="@android:color/holo_red_light"-->
    <!--        android:text="Sign Up"-->
    <!--        android:textColor="@color/white"-->
    <!--        android:textStyle="bold" />-->


    <Button
        android:id="@+id/homeSignUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_below="@id/logo"
        android:background="@drawable/white_outline_button"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAllCaps="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="16dp"
        android:theme="@style/YourButtonTheme"
        android:gravity="center" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeSignUpButton"
        android:layout_centerHorizontal="true"
        android:text="@string/Dont_have_an_account_yet"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>